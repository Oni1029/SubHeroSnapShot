<UserControl x:Class="SubHero.PointOfSale.BasicInfoMenuItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SubHero.PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="530">
    <Grid>
        <StackPanel>
            <TextBlock Text="{Binding Path=Name}" FontSize="20" HorizontalAlignment="Center" Margin="0,0,0,8"/>
            <TextBlock Text="{Binding Path=Description}" FontSize="18" HorizontalAlignment="Center" TextAlignment="Center" Margin="0,0,50,8" TextWrapping="Wrap"/>
            <TextBlock Text="{Binding Path=Calories, StringFormat='Total Calories: {0}'}" FontSize="18" HorizontalAlignment="Center" Margin="0,0,0,8"/>
        </StackPanel>
    </Grid>
</UserControl>
